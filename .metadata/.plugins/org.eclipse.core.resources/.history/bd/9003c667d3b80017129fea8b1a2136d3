package Fsd;

import java.util.Scanner;

public class Fsd {

	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);

		System.out.println("Geef een string in:");
		String tekst = keyboard.nextLine();
		StringBuilder tekst1 = new StringBuilder(tekst);

		if (tekst1.length() < 4) {
			tekst1.append("*)" + tekst1);
		}

		tekst = tekst1.toString();
		tekst = tekst.substring(0, 4).toUpperCase();

		StringBuilder tekst12 = new StringBuilder(tekst);

		System.out.println("Geef een andere string in:");
		String tekst2 = keyboard.nextLine();
		StringBuilder tekst21 = new StringBuilder(tekst2);
		tekst21.reverse();

		if (tekst21.length() < 4) {
			tekst21.append("+" + tekst21);
		}

		tekst2 = tekst21.toString();
		tekst2 = tekst2.substring(0, 4).toLowerCase();

		StringBuilder tekst22 = new StringBuilder(tekst2);

		tekst12.append(tekst22);
		System.out.println(tekst12);

		keyboard.close();
	}

}