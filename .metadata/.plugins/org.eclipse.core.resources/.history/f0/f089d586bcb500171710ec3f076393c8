package be.pxl.h6.oef2;

public class H6Oef2 {

	public static void main(String[] args) {
		//indexOf
		String string = "Di is een mooie string";
		String finalString;
		String temp;
		
		int first_t, first_T, length = 0, lowestIndex;
		
		first_t = string.indexOf('t');
		first_T = string.indexOf('T');
		
		//Vraag slecht geformuleerd
		
		if(first_t == -1 && first_T == -1) {
			
			System.out.println("Er zit geen t of T in de gegeven tekst");
			
		} else if (first_t == -1){
			
			length = string.length();
			temp = string.substring(first_T, string.length());
			string = string.substring(0, first_T);
			
			if(length % 2 == 0) {
				temp = temp.toLowerCase();
			} else {
				temp = temp.toUpperCase();
			}
			
			string = string + temp;
			
		} else if(first_T == -1) {
			
			length = string.length();
			temp = string.substring(first_t, string.length());
			string = string.substring(0, first_t);
			
			if(length % 2 == 0) {
				temp = temp.toLowerCase();
			} else {
				temp = temp.toUpperCase();
			}
			
			string = string + temp;
			
		} else {
			
			if(first_t < first_T) {
				
				lowestIndex = first_t;
			} else {
				lowestIndex = first_T;
			}
			
			length = string.length();
			temp = string.substring(lowestIndex, string.length());
			string = string.substring(0, lowestIndex);
			
			if(length % 2 == 0) {
				temp = temp.toLowerCase();
			} else {
				temp = temp.toUpperCase();
			}
			
			string = string + temp;
			
		}
		
		System.out.println(length);
		System.out.println(string);
	}
}